generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("STORAGE_URL")
}

// Kullanıcılar (Admin, Editor, Writer)
model User {
  id             String    @id @default(uuid())
  email          String    @unique
  name           String
  hashedPassword String
  role           Role      @default(POET)
  slug           String?   @unique
  bio            String?
  fullBio        String?
  education      String?
  awards         String[]
  image          String?
  articleCount   Int       @default(0)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  articles Article[]

  @@map("users")
}

// Kategoriler
model Category {
  id          String    @id @default(uuid())
  slug        String    @unique
  name        String
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  articles Article[]

  @@map("categories")
}

// Yazılar/Şiirler
model Article {
  id               String        @id @default(uuid())
  slug             String        @unique
  title            String
  excerpt          String
  content          String
  featuredImage    String?
  status           ArticleStatus @default(DRAFT)
  publishedAt      DateTime?
  readTime         String?
  views            Int           @default(0)
  authorRevealDate DateTime?

  // Editorial Workflow
  rejectionReason  String?
  reviewedBy       String?
  reviewedAt       DateTime?
  submittedAt      DateTime?

  authorId   String
  author     User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  versions   ArticleVersion[]
  articleViews ArticleView[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status, publishedAt])
  @@index([categoryId])
  @@index([authorId])
  @@map("articles")
}

// Yazı Versiyonları (Geçmiş)
model ArticleVersion {
  id        String   @id @default(uuid())
  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)

  title     String
  excerpt   String
  content   String
  version   Int
  changedBy String
  changeNote String?

  createdAt DateTime @default(now())

  @@index([articleId])
  @@index([createdAt])
  @@map("article_versions")
}

// Bildirimler
model Notification {
  id        String           @id @default(uuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  link      String?
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
  @@map("notifications")
}

// Aktivite Logları
model ActivityLog {
  id          String       @id @default(uuid())
  userId      String
  userName    String
  action      ActivityType
  entityType  String       // article, user, category, media, settings
  entityId    String?
  entityTitle String?
  details     String?
  ipAddress   String?
  createdAt   DateTime     @default(now())

  @@index([userId])
  @@index([action])
  @@index([entityType])
  @@index([createdAt])
  @@map("activity_logs")
}

// Makale Görüntülenmeleri (IP bazlı)
model ArticleView {
  id        String   @id @default(uuid())
  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  ipAddress String
  userAgent String?
  viewedAt  DateTime @default(now())

  @@unique([articleId, ipAddress])
  @@index([articleId])
  @@map("article_views")
}

// Site Ayarları
model Settings {
  id                 String   @id @default(uuid())
  siteTitle          String   @default("YurtSever Dergi")
  siteDescription    String   @default("Edebiyat ve kültür dergisi")
  contactEmail       String   @default("info@yurtsever.com")
  articlesPerPage    Int      @default(12)
  maintenanceMode    Boolean  @default(false)
  maintenanceMessage String?
  
  // Invitation Mode Fields
  invitationMode          Boolean   @default(false)
  invitationHeadline      String?
  invitationDescription   String?
  invitationLaunchDate    DateTime?
  invitationBackgroundImage String?
  invitationTwitterUrl    String?
  invitationInstagramUrl  String?
  invitationFacebookUrl   String?
  
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@map("settings")
}

// Davet E-postaları (Invitation Mode)
model InvitationEmail {
  id           String   @id @default(uuid())
  email        String   @unique
  subscribedAt DateTime @default(now())

  @@index([subscribedAt])
  @@map("invitation_emails")
}

// Login Logları (Güvenlik)
model LoginLog {
  id             String           @id @default(uuid())
  type           LoginAttemptType
  email          String
  ipAddress      String?
  createdAtLocal String?          // Türkiye saati (okunabilir format)
  userAgent      String?
  success        Boolean
  details        String?
  userId         String?
  createdAt      DateTime         @default(now())

  @@index([email])
  @@index([ipAddress])
  @@index([createdAt])
  @@index([type])
  @@map("login_logs")
}

// Enums
enum LoginAttemptType {
  SUCCESS
  FAILED_CREDENTIALS
  FAILED_VALIDATION
  RATE_LIMITED
  DANGEROUS_INPUT
  ACCOUNT_LOCKED
  RECAPTCHA_FAILED
}

enum Role {
  ADMIN
  WRITER
  POET
}

enum ArticleStatus {
  DRAFT
  PENDING_REVIEW
  PUBLISHED
  REJECTED
  ARCHIVED
}

enum NotificationType {
  ARTICLE_APPROVED
  ARTICLE_REJECTED
  ARTICLE_PUBLISHED
  NEW_ARTICLE_PENDING
  SYSTEM
}

enum ActivityType {
  CREATE
  UPDATE
  DELETE
  PUBLISH
  APPROVE
  REJECT
  LOGIN
  LOGOUT
}
